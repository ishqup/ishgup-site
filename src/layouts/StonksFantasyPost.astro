---
import type { CollectionEntry } from "astro:content";
import BaseLayout from "./BaseLayout.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";

type Props = CollectionEntry<"stonksFantasyBlog">["data"];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<BaseLayout title={title} description={description} image={heroImage}>
    <main
        class="mx-auto max-w-2xl p-5 break-words leading-normal text-left font-Verdana"
    >
        <div class="mb-3">
            {
                heroImage && (
                    <img
                        width={720}
                        height={360}
                        src={"../../public/" + heroImage}
                        alt=""
                    />
                )
            }
            <h1 class="my-4 font-bold text-4xl">{title}</h1>
            <FormattedDate date={pubDate} />
            {
                updatedDate && (
                    <div class="last-updated-on">
                        Last updated on <FormattedDate date={updatedDate} />
                    </div>
                )
            }
            <hr class="h-px my-4 bg-gray-300 border-0" />
        </div>
        <article class="prose prose-invert prose-md">
            <slot />
        </article>
    </main>
</BaseLayout>
