---
import FormattedDate from "./FormattedDate.astro";

const { title, description, date, image } = Astro.props;
---

<div
    class="w-full md:w-5/6 mx-auto h-70 overflow-hidden bg-slate-800 rounded-md bg-opacity-60 backdrop-filter backdrop-blur-xl drop-shadow-sm hover:drop-shadow-xl transition-all"
>
    <div class="h-40 mr-3 overflow-hidden">
        <img class="w-full" src={image} alt="" />
    </div>
    <div class="flex flex-col my-2 justify-between">
        <div>
            <div class="font-bold text-lg md:text-2xl">{title}</div>
            <div class="text-sm md:text-lg">{description}</div>
        </div>

        <div class="text-sm md:text-lg"><FormattedDate date={date} /></div>
    </div>
</div>
